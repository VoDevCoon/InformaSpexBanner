@using InformaSpexBanner.ViewModels
@model BannerEditViewModel

<div class="page-header">
	<h2>Upload base image for @Model.ExhibitionName <br /><small>Supported file format including: jpeg, jpg, gif, png</small></h2>
</div>
<form asp-controller="Banner" class="form-horizontal" asp-action="Create" method="post" enctype="multipart/form-data">
	<input type="hidden" asp-for="@Model.ExhibitionId" />
	<input type="hidden" asp-for="@Model.Id" />
	<div class="form-group">
		<label asp-for="Name" class="col-sm-4 control-label"></label>
		<div class="col-sm-8"><input asp-for="Name" class="form-control" /></div>
	</div>
	<div class="form-group">
		<label asp-for="Image" class="col-sm-4 control-label"></label>
		<div class="col-sm-8"><input asp-for="Image" /></div>
	</div>
	<div class="form-group"><div class="col-sm-offset-4 col-sm-8"><button class="btn btn-primary" type="submit">Save</button></div>
</form>