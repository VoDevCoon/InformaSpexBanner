@using InformaSpexBanner.ViewModels
@model BannerViewModel

<div class="row">
	<div class="col-md-12">
		<h2>@Model.Name<br /><small class="text-danger">Are you sure to delete @Model.Name?</small></h2>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="banner">
				<img src="@Model.ImageBase64String" />
				<span id="ctext"></span>
		</div>
		<form asp-action="Delete" asp-controller="Banner">
			<input type="hidden" asp-for="@Model.Id">
			<input type="hidden" asp-for="@Model.ExhibitionId">
			<button class="btn btn-danger pull-right">Delete</button>
			<a asp-controller="Exhibition" asp-action="Details" asp-route-Id="@Model.ExhibitionId" class="btn btn-default pull-right mr-s">Cancel</a>
		</form>
	</div>
</div>