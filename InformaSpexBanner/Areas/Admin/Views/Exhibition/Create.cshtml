@using InformaSpexBanner.ViewModels
@model ExhibitionEditViewModel
<div class="page-header">
    <h2>Add New Exhibition</h2>
</div>
		<form class="form-horizontal" asp-controller="Exhibition" asp-action="Create" method="post">
			<div class="form-group">
				<label asp-for="Name" class="col-sm-4 control-label"></label>

				<div class="col-sm-8"><input asp-for="Name" class="form-control" /></div>
		    	</div>
			<div class="form-group">
				<label asp-for="Description" class="col-sm-4 control-label"></label>
				<div class="col-sm-8"><input asp-for="Description" class="form-control"></div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
				<label><input asp-for="Active" /> Enable</label></div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
					<button class="btn btn-primary" type="submit">Create</button></div>
			</div>
		</form>
