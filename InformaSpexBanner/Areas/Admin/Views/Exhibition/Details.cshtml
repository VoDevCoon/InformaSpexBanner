@using InformaSpexBanner.ViewModels
@model ExhibitionViewModel

<div class="page-header">
	<h2 id="exhibition-name">@Model.Name</h2>
</div>
<div class="row">
	<div class="col-md-12">
		<label asp-for="Description"></label>
		<div>@Model.Description</div>
		<label asp-for="WebUrl"></label>
		<div>@Model.WebUrl</div>
	</div>
</div>
@{var r=0 ; var i=1;}
<div class="row">
	@foreach(var banner in Model.Banners)
	{
		<div class="col-xs-12 col-md-4">
			<div class="ibanner">
				<h4 class="text-center">@banner.Name</h4>
				<div class="pull-right"><span class="imgWidth"></span>
				<span class="imgHeight"></span></div>
				<img class="thumbnail hidden" src="@banner.ImageBase64String" />
				<div class="overlay"><span class="align-middle glyphicon glyphicon-zoom-in"></span></div>
			</div>
			<div class="pull-right">
				<a asp-controller="Banner" asp-action="Edit" class="btn btn-primary" asp-route-id="@banner.Id">Edit</a>
				<a asp-controller="Banner" asp-action="Delete" class="btn btn-danger" asp-route-id="@banner.Id">Remove</a></div>
		</div>

		if(i%3==0)
		{
			r++;
			@:</div><div class="row">
		}
		i++;
	}

</div>

<a asp-controller="Banner" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-lg btn-default">Add new banner</a>

<style type="text/css">
.ibanner{	
  position:relative;
  height: 150px;
  background:url(https://s3.amazonaws.com/images.informa.com.au/styles/Informa-logo-bg.png) -80px 50px no-repeat;
  border-radius:5px;
  z-index:1;
  padding:20px 5px;
  margin:10px 0;
  border:1px solid #ccc;
  box-shadow:2px 2px 2px rgba(0,0,0,0.1);	
	}
.ibanner span{
  display:block;
  margin-right:10px;	
	}	
	
.overlay{
  padding-top:60px;	
  z-index:100;	
  opacity:0;
  font-size:24px;
  text-align:center;
  position:absolute;
  top:0;
  left:0;	
  right:0;
  bottom:0;
  background-color:rgba(0,0,255,0.3);
  border-radius:5px;
  transition:0.4s all ease;
  -webkit-transition:0.4s all ease;	
	}
.ibanner:hover .overlay{
  opacity:1;
  font-size:32px;	
	}	
</style>