@using InformaSpexBanner.Entities
@model IEnumerable<Exhibition>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-3">
    	@foreach (var exhibition in Model)
		{
			<div>@exhibition.Name <a asp-controller="Exhibition" asp-action="Details" asp-route-Id="@exhibition.Id">View</a></div>
		}
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<a asp-controller="Exhibition" asp-action="Create" class="btn btn-default btn-lg">Add New Exhibition</a>
	</div>
</div>
