@using InformaSpexBanner.ViewModels
@model ExhibitionEditViewModel

<div class="row">
	<div class="col-md-12">
		<h2>Add new exhibition</h2>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<form asp-controller="Exhibition" asp-action="Create" method="post">
		<label asp-for="Name"></label>
		<input asp-for="Name"></div>
		<label asp-for="Description"></label>
		<input asp-for="Description"></div>
		<label asp-for="WebUrl"></label>
		<input asp-for="WebUrl"></input>
		<button type="submit">Create</button>
		</form>
	</div>
</div>
